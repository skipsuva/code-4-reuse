<p id="notice"><%= notice %></p>

<h1>Listing Shirts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Size</th>
      <th>Neck</th>
      <th>Img url</th>
      <th>Src url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @shirts.each do |shirt| %>
      <%= render '/shirts/shirt', shirt: shirt %>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Shirt', new_shirt_path %>

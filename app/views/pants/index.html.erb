<p id="notice"><%= notice %></p>

<h1>Listing Pants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Inseam</th>
      <th>Waist</th>
      <th>Img url</th>
      <th>Src url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pants.each do |pant| %>
      <tr>
        <td><%= pant.name %></td>
        <td><%= pant.type %></td>
        <td><%= pant.inseam %></td>
        <td><%= pant.waist %></td>
        <td><%= pant.img_url %></td>
        <td><%= pant.src_url %></td>
        <td><%= link_to 'Show', pant %></td>
        <td><%= link_to 'Edit', edit_pant_path(pant) %></td>
        <td><%= link_to 'Destroy', pant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

